generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"  // Thay bằng "mysql" hoặc "sqlite" nếu cần
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String   // Lưu hash password
  createdAt DateTime @default(now())
}